<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jackson.animationdemo.MainActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变换-位移动画"
        android:id="@+id/button_translate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变换-缩放动画"
        android:id="@+id/button_scale"
        android:layout_alignTop="@+id/button_translate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变换-透明动画"
        android:id="@+id/button_alpha"
        android:layout_alignTop="@+id/button_rotate"
        android:layout_alignLeft="@+id/button_scale"
        android:layout_alignStart="@+id/button_scale" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变换-旋转动画"
        android:id="@+id/button_rotate"
        android:layout_below="@+id/button_translate"
        android:layout_alignRight="@+id/button_translate"
        android:layout_alignEnd="@+id/button_translate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="逐帧动画"
        android:id="@+id/button_frame"
        android:layout_above="@+id/button_layout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="布局动画"
        android:id="@+id/button_layout"
        android:layout_above="@+id/button_object"
        android:layout_alignLeft="@+id/button_frame"
        android:layout_alignStart="@+id/button_frame" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="属性-Object"
        android:id="@+id/button_object"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="属性-Value"
        android:id="@+id/button_value"
        android:layout_below="@+id/button_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:src="@drawable/hy"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_value"
        android:layout_toStartOf="@+id/button_value" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组合动画1"
        android:id="@+id/animation_set1"
        android:layout_below="@+id/button_rotate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_object"
        android:layout_alignEnd="@+id/button_object" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组合动画2"
        android:id="@+id/animation_set2"
        android:layout_below="@+id/button_alpha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_alignLeft="@+id/button_value"
        android:layout_alignStart="@+id/button_value" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合作动画3"
        android:id="@+id/animation_set3"
        android:layout_below="@+id/animation_set1"
        android:layout_alignRight="@+id/animation_set1"
        android:layout_alignEnd="@+id/animation_set1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组合动画4"
        android:id="@+id/animation_set4"
        android:layout_alignBottom="@+id/animation_set3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/animation_set2"
        android:layout_alignStart="@+id/animation_set2" />


</RelativeLayout>
